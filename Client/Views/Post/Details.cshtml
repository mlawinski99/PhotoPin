@{
	ViewData["Title"] = "Details";
}

@model Post
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
 <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Index</title>
    <link rel="stylesheet" type="text/css" href="https://demo.plantpot.works/assets/css/normalize.css">
    <link rel="stylesheet" href="https://use.typekit.net/opg3wle.css">
	<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
</head>
<body>
	<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet" />
	<div class="container shadow-lg rounded" style="margin-top:-20px;margin-bottom:5%;">
		<!-- product -->
		<div class=" product-wrap product-deatil">
			<div class="row">
				<div class="col-md-5 col-sm-12 col-xs-12>
					<div class="product-image">
								@{
									var imagePath = "~/images/" + (Model.ImagePath);
											<!-- Slide 1 -->
											<div class="item justify-content-center active">
												<img src="@("https://localhost:7061/images/" + Model.ImagePath)" asp-append-version="true" class="mx-auto" alt="" />
											</div>
								}
					</div>
				</div>
					<hr />
				<div class="col-md-6 col-md-offset-1 col-sm-8 col-xs-8 ">
					<h2 class="name">
						<b>Posted by:</b> @Model.UserName
					</h2>
					<hr />
					<h4 class="price-container">
						<b>Description:</b> @Model.Description
					</h4>
					<hr />
					<div class="description description-tabs">
						<div class="tab-pane fade" id="more-information">
							<br />
							<p class="text-justify">@Model.Description</p>
						</div>
					</div>

				</div>
                <div class="row d-flex justify-content-center" >
                    <div class="col-md-8 col-lg-6" style="margin-bottom:2%;">
                        <div class="card shadow-0 border" style="background-color: #f0f2f5;">
                            <div class="card-body p-4">
                                <div class="form-outline mb-4">
									<form method="post" class="p-2 m-2" asp-route-id="@Model.Id" asp-action="AddComment" asp-asp-controller="Post">
										<input type="text" id="addComment" name="addComment" class="form-control" placeholder="Write your comment..." />
										<button style="margin-top:1%;"type="submit" class="btn btn-block btn-dark">
											Add Comment
										</button>
									</form>
                                </div>
							@if (Model.Comments.Any())
							{
								@foreach (var comment in Model.Comments)
								{
									<div class="card mb-4">
										<div class="card-body">
											<p>@comment.Text</p>
											<div class="d-flex justify-content-between">
												<div class="d-flex flex-row align-items-center">
													<p class="small mb-0 ms-2">@comment.UserName @comment.CreatedDate</p>
												</div>
											</div>
										</div>
									</div>
								}
							}
							else
							{
								<div class="card mb-4">
										<div class="card-body">
											<p> Post does not have any comments for now.</p>
										</div>
								</div>
							}
						</div>
                        </div>
                    </div>
                </div>
				</div>
					</div>

				</div>
	<script type="text/javascript">
	</script>
</body>
</html>