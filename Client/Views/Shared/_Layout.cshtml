<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Client</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Client.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div class="navbarCorrector">
            <nav classname="navbar" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container">
                    <div>
                    <a class="navbar-brand mr-4" asp-area="" asp-controller="Home" asp-action="Index">PhotoPin</a>
                    <img src="~/Images/photo.png" style="width:25px; height:25px;float:right;" /></div>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>
                <div>
                    <ul class="navbar-nav ml-auto">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item mr-2">
                                <a class="nav-link text-light btn btn-dark" style="margin: 3px" asp-area="" asp-controller="Post" asp-action="Create">Add Photo</a>
                            </li>
                            <li class="nav-item mr-2">
                                <a class="nav-link text-light btn btn-dark" style="margin: 3px" asp-area="" asp-controller="User" asp-action="MyProfile">My Profile</a>
                            </li>
                            <li class="nav-item mr-2">
                                <a class="nav-link text-light btn btn-dark" style="margin: 3px;" asp-area="" asp-controller="Post" asp-action="Favourites">Favourites</a>
                            </li>

                            <li class="nav-item">
                                <form method="post" asp-controller="User" asp-action="Logout">
                                    <button type="submit" class="nav-link text-light btn btn-dark" style="margin: 3px">
                                        Logout
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item mr-2">
                                <a class="nav-link text-light btn btn-dark" style="border: 2px;" asp-controller="Account" asp-action="Register">
                                    Sign up
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light btn btn-dark" style="border:2px;" asp-controller="Account" asp-action="Sign in">
                                    Login
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </nav>
        </div>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - PhotoPin - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
